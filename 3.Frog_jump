1.Using memoization

#include<bits/stdc++.h>
using namespace std;
int solve(int n,vector<int> &dp,int arr[]){
    if(n==0) return 0;
    if(dp[n]!=-1) return dp[n];
    int left=solve(n-1,dp,arr)+abs(arr[n]-arr[n-1]);
    int right = INT_MAX;
    if(n>1)
   right=solve(n-2,dp,arr)+abs(arr[n]-arr[n-2]);
    return dp[n]=min(left,right);
}

int main(){
    int n;
    cin>>n;
    vector<int> dp(n,-1);
    int arr[]={10,20,30,10};
    cout<<solve(n-1,dp,arr);
}

#Using Tabbulation

#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    vector<int> dp(n+1,-1);
    int arr[]={10,20,30,10};
    dp[0]=0;
    for(int i=1;i<n;i++){
        int fs=dp[i-1]+abs(arr[i]-arr[i-1]);
        int sc=INT_MAX;
        if(i>1){
            sc=dp[i-2]+abs(arr[i]-arr[i-2]);
        }
        dp[i]=min(fs,sc);
    }
    cout<<dp[n-1];
}

#Using space optimization

#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    int arr[]={10,20,30,10};
    int prev=0;
    int prev1=0;
    for(int i=1;i<n;i++){
        int fs=prev+abs(arr[i]-arr[i-1]);
        int sc=INT_MAX;
        if(i>1){
            sc=prev1+abs(arr[i]-arr[i-2]);
        }
        int curr=min(fs,sc);
        prev1=prev;
        prev=curr;
    }
    cout<<prev;
}
